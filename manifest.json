{
    "manifest_version": 2,
    "name": "ReadIt!!",
    "version": "0.1.2",
    "icons": {
        "16": "img/16.png",
        "24": "img/24.png",
        "32": "img/32.png",
        "64": "img/64.png"
    },
    "content_scripts": [{
        "matches": ["*://*/*"],
        "js": [
            "js/content_scripts.js"
        ]
    }],
    "background": {
        "scripts": [
            "js/responsivevoice.js",
            "js/background.js"
        ],
        "persistent": false
    },
    "permissions": ["storage", "contextMenus", "notifications"],
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "browser_action": {},
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}