{
    "manifest_version": 2,
    "name": "ReadIt!!",
    "version": "0.1",
    "content_scripts": [{
        "matches": ["*://*/*"],
        "js": [
            "js/content_scripts.js"
        ]
    }],
    "background": {
        "scripts": [
            "js/responsivevoice.js",
            "js/background.js"
        ],
        "persistent": false
    },
    "permissions": ["storage", "contextMenus"],
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "browser_action": {},
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}